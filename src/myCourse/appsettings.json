{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  
  "AllowedHosts": "*",
  
   "ConnectionStrings": {
      "Default": "Data Source=Data/MyCourse.db"
   },

   "DistributedCache": {
      "Redis": {
         "Configuration": "localhost",
         "InstanceName": "MyCourseRedisCache"
      }
   },
   
   "SqlServer":{
      "ConnectionString":"Data Source=(localdb)\\MSSQLLocalDb;Integrated Sequrity=True",
      "SchemaName": "dbo",
      "TableName": "MyCourseSqlCache"
   },

   "Courses": {
      "PerPage": 10,
      "Order": {
         "By":"Title",
         "Ascending": false,
         "Allow": ["Title", "Rating", "CurrentPrice"]
      }
   },"MemoryCache":{
      "SizeLimit": 1000
   }
  
}
